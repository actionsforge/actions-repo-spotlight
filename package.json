{
  "name": "actions-repo-spotlight",
  "version": "1.0.0",
  "description": "GitHub Action to auto-pin your most visited repositories using the GitHub API",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "repo-spotlight": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' vitest run",
    "dev": "vitest watch",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/actionsforge/actions-repo-spotlight.git"
  },
  "keywords": [
    "github-action",
    "pinned-repos",
    "spotlight",
    "repo-analytics",
    "graphql",
    "gh-api"
  ],
  "author": "John Ajera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/actionsforge/actions-repo-spotlight/issues"
  },
  "homepage": "https://github.com/actionsforge/actions-repo-spotlight#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.0.2",
    "esbuild": "^0.25.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.0",
    "tsup": "^8.4.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
